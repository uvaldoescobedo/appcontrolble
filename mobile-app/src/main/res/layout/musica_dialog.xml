<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:elevation="@dimen/dimen_30"
    android:background="@color/white_color"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tittle_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona Una Opcion"
        android:textSize="20sp"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/text_color"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/btn_youtube"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_youtube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle_alert" />

    <TextView
        android:id="@+id/btn_spotify"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_spotify"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_youtube" />

</android.support.constraint.ConstraintLayout>